<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="268.0" prefWidth="341.0" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.pr3.controllers.InicioSesionController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <children>
        <Label prefHeight="27.0" prefWidth="307.0" styleClass="title" text="Bienvenido a la Agencia de Viajes" />
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Label prefHeight="27.0" prefWidth="102.0" text="Correo:" />
                <TextField fx:id="usernameField" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Label prefHeight="27.0" prefWidth="102.0" text="Contraseñia:" />
                <PasswordField fx:id="passwordField" />
            </children>
        </HBox>
      <AnchorPane prefHeight="15.0" prefWidth="327.0" />
        <Button fx:id="loginButton" onAction="#cambiarVentanaPrincipal" text="Inciar Sesion" />
      <Hyperlink fx:id="btnRecuperarContrasenia" onAction="#enviarCorreoRecuperacionContrasenia" text="¿Olvidó la contraseñia?" />
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
