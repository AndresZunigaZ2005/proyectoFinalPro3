<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="179.0" prefWidth="287.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19">
    <!-- Menú desplegable en el lado izquierdo -->
    <left>
        <VBox>
            <Button onAction="#abrirSeccion1" text="Botón 1" />
            <Button onAction="#abrirSeccion2" text="Botón 2" />
            <!-- Agrega más botones según sea necesario -->
        </VBox>
    </left>

    <!-- Diferentes secciones en la parte central -->
    <center>
        <StackPane fx:id="panelCentral">
            <!-- Las secciones se agregarán aquí dinámicamente -->
        </StackPane>
    </center>
</BorderPane>
